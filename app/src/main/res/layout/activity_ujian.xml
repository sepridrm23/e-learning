<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:gravity="center">
    <TextView
        android:id="@+id/tv1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="Downloading File with ProgressBar Demo From Coderzheaven"/>
    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download File"
        android:visibility="gone"
        android:onClick="downloadFile"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="135dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bkkbn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUnduhUjian"
        android:text="Unduh Soal Ujian"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnIsiUjian"
        android:text="Isi Soal Ujian"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnKirimUjian"
        android:text="Kirim Ujian"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:visibility="gone"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnHasilUjian"
        android:text="Hasil Ujian"
        android:background="@drawable/custom_button"
        android:textColor="@android:color/white"
        android:padding="10dp"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"/>

</LinearLayout>